# Environment Configuration for Digital Forensics Application

# Flask Configuration
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Security
SECRET_KEY=your-secret-key-change-in-production-very-important

# Database
DATABASE_URL=sqlite:///database/forensics.db

# File Upload Settings
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes
UPLOAD_FOLDER=uploads
RECOVERED_FILES_FOLDER=recovered_files
FORENSIC_RESULTS_FOLDER=forensic_results

# Logging
LOG_LEVEL=INFO
LOG_FOLDER=logs

# Server Configuration
HOST=0.0.0.0
PORT=5000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,http://127.0.0.1:5500

# Optional: External Services
# VIRUS_TOTAL_API_KEY=your-virus-total-api-key
# YARA_RULES_PATH=rules/yara
# EXTERNAL_ANALYSIS_ENDPOINT=https://your-analysis-service.com/api

# Development Settings
DEBUG_MODE=True
TESTING=False